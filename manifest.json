{
  "manifest_version": 3,
  "name": "IMBD torrent",
  "description": "Add torrent link for the movie on imdb page",
  "version": "1.0",
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "images/main.png"
  },
  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "matches": [
        "https://www.imdb.com/*"
      ]
    }
  ]
}